<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings" >
    
    <ListPreference 
		    android:title="@string/account_title" 
		    android:defaultValue="0" 
		    android:entries="@array/account_names" 
		    android:entryValues="@array/account_values" 
		    android:key="accountx"/>
        
    <EditTextPreference
        android:key="userid"
        android:defaultValue="0"
        android:enabled="true"
        android:summary="@string/userid_summary"
        android:title="@string/userid_title" />
    
    <EditTextPreference
        android:key="userpsw"
        android:defaultValue=""
        android:enabled="true"
        android:summary="@string/userpsw_summary"
        android:title="@string/userpsw_title" />
    
    <EditTextPreference
        android:key="useridr"
        android:defaultValue="0"
        android:enabled="true"
        android:summary="@string/useridr_summary"
        android:title="@string/useridr_title" />
    
    <EditTextPreference
        android:key="userpswr"
        android:defaultValue=""
        android:enabled="true"
        android:summary="@string/userpswr_summary"
        android:title="@string/userpswr_title" />
    
    <ListPreference 
		    android:title="@string/period_title" 
		    android:defaultValue="D1" 
		    android:entries="@array/period_names" 
		    android:entryValues="@array/period_values" 
		    android:key="periodx"/>
    
    <EditTextPreference
        android:key="repeat"
        android:defaultValue="60"
        android:enabled="true"
        android:summary="@string/rpt_summary"
        android:title="@string/rpt_title" />
    
    <EditTextPreference
        android:key="streamf"
        android:defaultValue="60"
        android:enabled="true"
        android:summary="@string/streamf_summary"
        android:title="@string/streamf_title" />
    
    <EditTextPreference
        android:key="comment1"
        android:defaultValue="com1"
        android:enabled="true"
        android:summary="@string/comment_summary"
        android:title="@string/comment1_title" />
    
    <EditTextPreference
        android:key="comment2"
        android:defaultValue="com2"
        android:enabled="true"
        android:summary="@string/comment_summary"
        android:title="@string/comment2_title" />
    
    <EditTextPreference
        android:key="comment3"
        android:defaultValue="com3"
        android:enabled="true"
        android:summary="@string/comment_summary"
        android:title="@string/comment3_title" />
    
    <EditTextPreference
        android:key="favlot"
        android:defaultValue="0.1"
        android:enabled="true"
        android:summary="@string/startlot_summary"
        android:title="@string/startlot_title" />
    
    <EditTextPreference
        android:key="steplot"
        android:defaultValue="0.01"
        android:enabled="true"
        android:summary="@string/steplot_summary"
        android:title="@string/steplot_title" />
    
    

</PreferenceScreen>